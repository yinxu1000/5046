<?xml version="1.0" encoding="utf-8"?>
<!--登录界面,用LinearLayout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_back"
    android:orientation="vertical"

    >
    <!--标题栏-->
    <include layout="@layout/main_title_bar"></include>
    <!--显示头像，记得加入id iv_head -->
    <!--输入框-->

    <!--输入框-->

    <!--按钮-->
    <!--显示tv register , find_psw -->

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="54dp"
        android:text="Welcome to Calorie Tracker"
        android:gravity="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"></LinearLayout>
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"

        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Please input username"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="@color/colorAccent"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/et_psw"
        android:layout_width="341dp"
        android:layout_height="48dp"

        android:layout_marginLeft="35dp"


        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="please input user password"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="@color/colorAccent"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"></LinearLayout>
    <Button
        android:id="@+id/bolean_login"
        android:layout_width="fill_parent"
        android:layout_height="69dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:background="@color/colorAccent"
        android:text="Log in"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bolean_SignUp"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/design_default_color_primary_dark"
            android:gravity="center"
            android:padding="8dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"


            android:textSize="12sp" />
        <!--layout_weight="1" layout_width="0dp"实现均分效果-->
        <TextView
            android:id="@+id/editText"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:ems="10"

            android:text="" />

        <Button
            android:shadowColor="@color/design_default_color_primary_dark"
            android:id="@+id/bolean_fgPassword"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/design_default_color_primary_dark"
            android:gravity="center"
            android:padding="8dp"
            android:text="Forget password?"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>